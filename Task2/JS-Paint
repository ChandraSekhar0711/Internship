      function _(selector){
  return document.querySelector(selector);
let eraseEnable=false;
}

function setup(){
  let canvas = createCanvas(600,500);
  canvas.parent("canvas-wrapper");
  background(200);
}
function mouseDragged(){
  let type = _("#pen-pencil").checked?"pencil":"brush";
  let type1=_("#pen-eraser").checked?"eraser":type;
  let size = parseInt(_("#pen-size").value);
  let color = _("#pen-color").value;
  fill(color);
  stroke(color);
  

  if(type1 == "pencil"){
    line(pmouseX, pmouseY, mouseX,mouseY);
  } else if (type1 =="brush") {
    ellipse(mouseX, mouseY, size,size);

  }else{
    fill(200);
    stroke(200);
    ellipse(mouseX, mouseY, size,size);
    line(pmouseX, pmouseY, mouseX, mouseY,size,size);
}
}

/*document.getElementById("reset-canvas").addEventListener("click",myFunction);*/
function myFunction(){
  clear();
  background(200);
}
document.getElementById("save-canvas").addEventListener("click",function(){
  saveCanvas("sketch","jpg");
});
